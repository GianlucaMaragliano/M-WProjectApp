<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView showing the workout date -->

    <ImageButton
        android:id="@+id/calendar_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_gravity="bottom|end"
        android:backgroundTint="?attr/colorSecondaryContainer"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewWorkoutOfWeek"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002"
        app:srcCompat="@drawable/calendar_time_svgrepo_com" />

    <TextView
        android:id="@+id/textViewWorkoutOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout of Dec 02, 2024"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMostPlayedSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most played song"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWorkoutOfWeek"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTotalWeekDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly distance "
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMostPlayedSong"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAvgHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Heart Rate "
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTotalWeekDistance"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewUsualWorkoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usually working out on "
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAvgHeartRate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTotalTimeWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total workout time "
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewUsualWorkoutTime"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
